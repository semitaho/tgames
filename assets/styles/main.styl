@lightamount=30
html, body, #reaktor-container, .reaktor-panel
  height 100%

header > .row
  margin-left 0
  margin-right 0


.col-xs-6
  &:nth-child(1), &:nth-child(2)
    margin-bottom 20px
.img-login
  max-width 50px

.reaktor-panel
  margin-bottom 0
  width 100%

.reaktor-panel-footer
  width 100%
  height 100%
  overflow hidden

.start
  vertical-align middle  


.react-button-container
  background yellowgreen
  text-align center
  padding 30px

.btn-super-lg, h2
  font-size 40px

.gamebox
  border-radius 25px

.react-button
  width 100%
  margin 1px
  //border 2px solid gray
  border-radius 50%
  //margin 10px
  //box-shadow 0 15px 0 0 black 
  

  &.pressed
    margin-top 15px
    margin-bottom -15px
    //border 0
    //background #33a6cc
    box-shadow none
   
  &.blink
    animation blinker 1s linear infinite
    background-color rgba(255,255,255,1)
    box-shadow 0px 2px 10px rgba(255,255,255,0.8), 0px 5px 50px rgba(255,255,255,0.8), 0px 8px 80px rgba(255,255,255,0.6), 0px 8px 120px rgba(255,255,255,0.6)
  


  &.active, &.blink
    transition all .4s
    border 1px solid gray
    
  &:hover
    opacity 0.5
 
.btn-group-vertical > *
  margin-bottom 10px

.cell
  width 100%
  box-sizing border-box
  font-size medium
  @media (min-width: 1200px)
    font-size xx-large
  @media (min-width: 768px)
    font-size x-large  


.edit
  color blue
.box-cell
  width 11.1% !important
.box-right
  border-right 2px solid black
.box-left
  border-left 2px solid black
.box-top
  border-top 2px solid black
.box-bottom
  border-bottom 2px solid black

.col-md-1
  padding-left 0
  padding-right 0 

