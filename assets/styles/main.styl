@lightamount=30
html, body, #reaktor-container, .reaktor-panel
  height 100%

header > .row
  margin-left 0
  margin-right 0


.col-xs-6
  &:nth-child(1), &:nth-child(2)
    margin-bottom 20px
.img-login
  max-width 50px

.reaktor-panel
  margin-bottom 0
  width 100%

.reaktor-panel-footer
  width 100%
  height 100%
  overflow hidden

.start
  vertical-align middle  


.react-button-container
  background yellowgreen
  text-align center
  padding 30px

.btn-super-lg, h2
  font-size 40px

.gamebox
  border-radius 25px

.react-button
  margin 1px
  border 2px solid gray
  border-radius 50%
  //margin 10px
  box-shadow 0 15px 0 0 black 
  

  &.pressed
    margin-top 15px
    margin-bottom -15px
    border 0
    background #33a6cc
    box-shadow none
   
  &.blink
    animation blinker 1s linear infinite

  &.active, &.blink
    transition all .4s
    background-color rgba(255,255,255,1)
    border 1px solid gray
    box-shadow 0px 2px 10px rgba(255,255,255,0.8), 0px 5px 50px rgba(255,255,255,0.8), 0px 8px 80px rgba(255,255,255,0.6), 0px 8px 120px rgba(255,255,255,0.6)
  

  &:hover
    opacity 0.5
  &.red
    background-color red
    &.active
      background-color rgb(255,255,255,1)

  &.green
    background-color green 
    &.active
      background-color rgb(255,255,255,1)

  &.blue
    background-color blue 
    &.active
      background-color rgb(255,255,255,1)
    
  &.yellow
    background-color yellow  
    &.active
      background-color rgb(255,255,255,1)

.btn-group-vertical > *
  margin-bottom 10px
